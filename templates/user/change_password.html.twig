{% extends 'base.html.twig' %}

{% block title %}Change Password{% endblock %}

{% block main %}
    <h3 class="text-center">CAMBIAR PASSWORD</h3>
    <div class="col-12 col-md-9 col-lg-7 col-xl-6 mx-auto">                
        <form action="{{ path('app_user_change_password', {'id': user.id}) }}" method="post">
            <input type="hidden" name="_token" value="{{ csrf_token('changePassword' ~ user.id) }}">                    
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" for="password">Password:</label>
                <div class="col-sm-6">
                    <input class="form-control" type="password" name="password" id="password" required>
                </div>                
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" for="new_password">Repite Password:</label>
                <div class="col-sm-6">
                    <input class="form-control" type="password" name="new_password" id="new_password" required>
                </div>                
            </div>               
            <div class="row mb-3">
                <label class="col-sm-4" for="nome">&nbsp;</label>
                <div class="col-sm-6">
                    <input type="submit" value="Change Password">                    
                </div>                
            </div>                                                              
        </form>        
        <a class="btn btn-primary mb-5" href="{{ path('app_user_edit', {'id': user.id}) }}">go_back</a>      
    </div>            
{% endblock %}