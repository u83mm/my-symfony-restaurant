<form action="{{ path('app_user_edit', {'id': user.id}) }}" method="post">
    <input type="hidden" name="_token" value="{{ csrf_token('edit' ~ user.id) }}">
    <div class="row mb-3">
        <label class="col-12 col-sm-3 text-center text-md-end col-form-label" for="user_name">User:</label>
        <div class="col-sm-8">
            <input class="form-control" type="text" name="user_name" id="user_name" value="{{ user.userName }}" required>
        </div>                
    </div>    
    <div class="row mb-3">
        <label class="col-12 col-sm-3 text-center text-md-end col-form-label" for="email">Email:</label>
        <div class="col-sm-8">
            <input class="form-control" type="email" name="email" id="email" value="{{ user.email }}" required>
        </div>                
    </div>
    <div class="row mb-3">
        <label class="col-12 col-sm-3 text-center text-md-end col-form-label" for="role">Role:</label>
        <div class="col-12 col-md-8 text-center text-md-start">
            <select name="role" id="role">
                <option value="{{ user.roles ? user.roles|json_encode : '' }}">{{ user.roles ? user.roles|json_encode : '' }}</option>
                {% for role in roles %}
                <option value="{{ role.role }}">{{ role.role }}</option>
                {% endfor %}
            </select>
        </div>                
    </div>              
    <div class="row mb-3 mt-5">
        <label class="col-12 col-sm-3 text-center text-md-end" for="nome">&nbsp;</label>
        <div class="col-sm-8 text-center text-md-start">
            <button class="btn btn-outline-success">{{ button_label|default('Update') }}</button>
            <a class="btn btn-outline-success" href="{{ path('app_user_change_password', {'id': user.id}) }}">Change Password</a>
            <a class="btn btn-outline-primary" href="{{ path('app_user_index') }}">Back to list</a>        
        </div>                
    </div>                                                              
</form>