{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block main %}
    <h3 class="text-center">USER INDEX</h3>

    <div class="col-12 col-xl-9 mx-auto table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="text-center">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Roles</th>                    
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.userName }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>                    
                    <td class="text-center">                        
                        <a class="btn btn-outline-success" href="{{ path('app_user_edit', {'id': user.id}) }}">Edit</a>
                        {{ include('user/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a class="btn btn-primary" href="{{ path('app_user_new') }}">New</a>
        <a class="btn btn-primary" href="{{ path('app_admin') }}">Back</a>
    </div>    

    
{% endblock %}
