{% extends 'base.html.twig' %}

{% block title %}{{ 'dish day'|trans|capitalize }}{% endblock %}

{% block main %}
    <h1>{{ 'dish day'|trans|capitalize }}</h1>
    <div class="col-12 col-md-9 col-lg-7 col-xl-6 mx-auto">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ dish_day.id }}</td>
                </tr>
                <tr>
                    <th>{{ 'name'|trans|capitalize }}</th>
                    <td>{{ dish_day.categoryName|trans|capitalize }}</td>
                </tr>
            </tbody>
        </table>
    
        <a class="btn btn-primary" href="{{ path('app_dish_day_index') }}">{{ 'go_back'|trans|capitalize }}</a>
    
        <a class="btn btn-primary" href="{{ path('app_dish_day_edit', {'id': dish_day.id}) }}">{{ 'edit'|trans|capitalize }}</a>
    
        {{ include('dish_day/_delete_form.html.twig') }}
    </div>    
{% endblock %}
