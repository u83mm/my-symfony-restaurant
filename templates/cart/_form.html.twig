<form action="" method="post">
    <div class="row mb-4 col-12 col-md-8 mx-auto justify-content-center">
        <!-- Table -->
        <div class="col-6 col-lg-4">
            {{ form_label(form.tableNumber, null, {'label_attr': {'class': 'col-12 col-md-4 col-form-label text-center text-md-end'}}) }}
            <div class="col-12 col-md-7 d-inline-block text-center text-md-start">
                {{ form_widget(form.tableNumber) }}
            </div>
        </div>

        <!-- People -->
        <div class="col-6 col-lg-4">
            {{ form_label(form.peopleQty, null, {'label_attr': {'class': 'col-12 col-md-4 col-form-label text-center text-md-end'}}) }}
            <div class="col-12 col-md-7 d-inline-block text-center text-md-start">
                {{ form_widget(form.peopleQty) }}
            </div>
        </div>
    </div>

                                        <!-- ORDER -->
    <div class="row mb-3">
        <!-- Aperitiffs -->
        <div class="col-12 col-md-6 col-lg-4 mb-5">
            <h3 class="text-center">{{ 'snaks'|trans|capitalize }}</h3>
            <div class="w-100 adminMenus menuDia">
                <ul class="ps-4">
                   {% for dish in dishes %}
                        {% if dish.category == 'aperitifs' %}
                            <li>
                                <div class="col-9 d-inline-block">
                                    {{ dish.name|trans|capitalize }}
                                </div>
                                <div class="col-2 d-inline-block">
                                    <input class="numberQty" type="number" name="aperitifs_qty[]" id="" value="{{ dish.qty }}">
                                </div>
                            </li>                            
                        {% endif %}
                    {% endfor %} 
                </ul>
            </div>
        </div>

        <!-- Firsts -->
        <div class="col-12 col-md-6 col-lg-4 mb-5">
            <h3 class="text-center">{{ 'main_corses'|trans|title }}</h3>
            <div class="w-100 adminMenus menuDia">
                <ul class="ps-4">
                    {% for dish in dishes %}
                        {% if dish.category == 'firsts' %}
                            <li>
                                <div class="col-9 d-inline-block">
                                    {{ dish.name|trans|capitalize }}
                                </div>
                                <div class="col-2 d-inline-block">                                    
                                    <input class="numberQty" type="number" name="firsts_qty[]" id="" value="{{ dish.qty }}">
                                </div>
                            </li>                            
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </div>

        <!-- Seconds -->
        <div class="col-12 col-md-6 col-lg-4 mb-5">
            <h3 class="text-center">{{ 'seconds dishes'|trans|title }}</h3>
            <div class="w-100 adminMenus menuDia">
                <ul class="ps-4">
                    {% for dish in dishes %}
                        {% if dish.category == 'seconds' %}
                            <li>
                                <div class="col-9 d-inline-block">
                                    {{ dish.name|trans|capitalize }}
                                </div>
                                <div class="col-2 d-inline-block">                                                                        
                                    <input class="numberQty" type="number" name="seconds_qty[]" id="" value="{{ dish.qty }}">
                                </div>
                            </li>                            
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </div>

        <!-- Desserts -->
        <div class="col-12 col-md-6 col-lg-4 mb-5">
            <h3 class="text-center">{{ 'drinks'|trans|title }}</h3>
            <div class="w-100 adminMenus menuDia">
                <ul class="ps-4">
                    {% for dish in dishes %}
                        {% if dish.category == 'drinks' %}
                            <li>
                                <div class="col-9 d-inline-block">
                                    {{ dish.name|trans|capitalize }}
                                </div>
                                <div class="col-2 d-inline-block">
                                    <input class="numberQty" type="number" name="drinks_qty[]" id="" value="{{ dish.qty }}">
                                </div>
                            </li>                            
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </div>

        <!-- Coffees -->
        <div class="col-12 col-md-6 col-lg-4 mb-5">
            <h3 class="text-center">{{ 'desserts'|trans|title }}</h3>
            <div class="w-100 adminMenus menuDia">
                <ul class="ps-4">
                    {% for dish in dishes %}
                        {% if dish.category == 'desserts' %}
                            <li>
                                <div class="col-9 d-inline-block">
                                    {{ dish.name|trans|capitalize }}
                                </div>
                                <div class="col-2 d-inline-block">
                                    <input class="numberQty" type="number" name="desserts_qty[]" id="" value="{{ dish.qty }}">
                                </div>
                            </li>                            
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </div>

        <!-- Aperitiffs -->
        <div class="col-12 col-md-6 col-lg-4 mb-5">
            <h3 class="text-center">{{ 'coffees'|trans|capitalize }} / {{ 'liquors'|trans|capitalize }}</h3>
            <div class="w-100 adminMenus menuDia">
                <ul class="ps-4">
                    {% for dish in dishes %}
                        {% if dish.category == 'coffees' %}
                            <li>
                                <div class="col-9 d-inline-block">
                                    {{ dish.name|trans|capitalize }}
                                </div>
                                <div class="col-2 d-inline-block">
                                    <input class="numberQty" type="number" name="coffees_qty[]" id="" value="{{ dish.qty }}">
                                </div>
                            </li>                            
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-12 text-center">
            <!-- <button class="btn btn-outline-success">{{ button_label|default('Save') }}</button> -->
            <a class="btn btn-outline-success" href="{{ path('app_save_cart') }}">{{ 'save'|trans|capitalize }}</a>
            <a class="btn btn-outline-primary" href="{{ path('app_reset_order') }}">{{ 'new order'|trans|title }}</a>
            <button class="btn btn-outline-primary">{{ 'update'|trans|capitalize }}</button>            
        </div>
    </div>  
    {{ form_row(form._token) }}      
</form>
