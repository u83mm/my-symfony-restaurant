{% extends 'base.html.twig' %}

{% block title %}My Restaurant | admin{% endblock %}

{% block main %}
<div class="row justify-content-evenly">
    <h3 class="text-center pb-2">{{ 'dish_search'|trans|upper }}</h3>
    
    <section class="col-12 col-md-5 mb-4 shadow rounded adminMenus">
        <h4 class="text-center">{{ 'search_critery'|trans|capitalize }}</h4>
        <h4 class="text-center">{{ 'by_name'|trans|capitalize }}</h4>
