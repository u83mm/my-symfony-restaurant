{{ form_start(form) }}
<!-- Date and Time -->
<div class="row mb-0 mb-md-3 d-flex">
    <div class="col-12 col-md-6">
        {{ form_label(form.date, 'Date:', {'label_attr': {'class': 'col-3 col-md-4 form-label mb-2 mb-md-0'}}) }}
        <div class="col-8 col-md-7 d-inline-block mb-2 mb-md-0">
            {{ form_widget(form.date, { 'attr': { 'class': 'form-control', 'required': 'required', 'value': 'now'|date("Y-m-d")}}) }}
        </div>
    </div>
    <div class="col-12 col-md-6 mb-4">
        {{ form_label(form.time, 'Time:', {'label_attr': {'class': 'col-3 col-md-4 form-label mb-2 mb-md-0'}}) }}
        <div class="col-8 col-md-7 col-lg-7 d-inline-block mb-2 mb-md-0">
            {{ form_widget(form.time) }}
        </div>
    </div>
    <div class="col text-center">
        {{ form_widget(form.send,  { 'attr': { 'class': 'btn btn-primary' }, 'label': 'Search by date' }) }}
    </div>
</div>
{{ form_end(form) }}