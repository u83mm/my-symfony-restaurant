{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block main %}
<div class="col-12 col-md-6 mx-auto">
    {% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <div class="row mb-3">
            <label class="col-12 col-md-3 text-center text-md-end col-form-label" for="username">Email:</label>
            <div class="col-12 col-md-8">                
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}">
            </div>                
        </div> 
        
        <div class="row mb-3">
            <label class="col-12 col-md-3 text-center text-md-end col-form-label" for="password">Password:</label>
            <div class="col-12 col-md-8">                               
                <input class="form-control" type="password" id="password" name="_password">
                {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="/account"> #}
            </div>                
        </div> 
                              
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="row mb-3">
            <label class="col-12 col-md-3" for="none">&nbsp;</label>
            <div class="col-12 col-md-8">                
                <button class="btn btn-outline-success" type="submit">login</button>
            </div> 
        </div>        
    </form>
</div>    
{% endblock %}
