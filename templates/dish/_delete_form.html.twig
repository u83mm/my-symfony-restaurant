<form class="d-inline" method="post" action="{{ path('app_dish_delete', {'id': dish.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ dish.id) }}">
    <button class="btn btn-outline-danger">{{ 'delete'|trans|capitalize }}</button>
</form>
