{{ form_start(form) }}
    {% for field in form.children %}
    <div class="row {% if not field.vars.valid %}has-error{% endif %}">
        {% if field.vars.name != "_token" %}
            <div class="col-sm-4 mb-3">
                {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }} 
            </div>                                               
        {% endif %}

        <div class="col-sm-8 mb-3">
            {% if field.vars.name == "price" %}
                {{ form_widget(field, { 'attr': {'class': 'product-imput-price ' }}) }}
            {% else %}
                {{ form_widget(field, { 'attr': { 'class': 'form-control' }}) }}
            {% endif %}                       
            
        </div>                                                                                         
        <div class="error">{{ form_errors(field) }}</div>    
    </div>             
    {% endfor %}    
    <button class="btn btn-outline-primary">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
