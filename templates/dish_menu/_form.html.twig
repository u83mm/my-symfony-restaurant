{{ form_start(form) }}
    {% for field in form.children %}
        <div class="row {% if not field.vars.valid %}has-error{% endif %}">
            {% if field.vars.name != "_token" %}
                <div class="col-sm-3 mb-3 align-content-center">
                    {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }} 
                </div>
            {% endif %}
            
            <div class="col-sm-8 mb-3">
                {{ form_widget(field, { 'value': field.vars.value|trans }) }}
            </div>            

            <div class="error">{{ form_errors(field) }}</div> 
        </div>        
    {% endfor %}

    <div class="row">
        <div class="col-sm-3 mb-3">
            <label for="emoji">{{ 'select an emoji'|trans|capitalize }}:</label>
        </div>        
        <div id="emoji-container" class="col-sm-8 mb-3">
            <!-- Emojis will be dynamically inserted here -->
        </div>  
    </div>      
    
    <div class="row">
        <div class="col-sm-3 mb-3">&nbsp;</div>
        <div class="col-sm-8 mb-3">
            <button class="btn btn-outline-primary">{{ button_label|default('save'|trans|capitalize) }}</button>
        </div>
    </div>   
{{ form_end(form) }}
